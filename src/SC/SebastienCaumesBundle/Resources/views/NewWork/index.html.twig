{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('newwork_new') }}">
                <button type="button" class="btn btn-danger">
                    Ajouter un projet
                </button>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h1>NewWork list</h1>

            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Date</th>
                        <th>Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                {% for entity in entities %}

                    <tr>
                        <td>{{ entity.title }}</td>
                        <td>{{ entity.description|slice(0,60)|raw }}</td>
                        <td><img src="{{ entity.image|raw }}" width="50"></td>
                        <td>{% if entity.date %}{{  entity.date|date('d M Y') }} à {{ entity.date|date('H:i') }}{% endif %}</td>
                        <td>{{ entity.author }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('newwork_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('newwork_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>


        </div>
    </div>


    {% endblock %}

{% block footer %}

   {{ parent() }}

{% endblock %}

{% block footer_right %}

    <a href="{{ path('logout') }}">
        <button type="button" class="btn btn-default">
            Déconnection
        </button>
    </a>

{% endblock %}